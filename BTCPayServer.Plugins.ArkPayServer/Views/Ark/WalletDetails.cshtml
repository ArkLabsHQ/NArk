@model BTCPayServer.Plugins.ArkPayServer.Data.Entities.ArkWallet
@using BTCPayServer.Abstractions.Extensions
@{
    ViewData.SetActivePage("ArkPayServer", "ArkPayServer", "ArkPayServer");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Wallet Details</h1>
    <div>
        <a asp-action="BoardingAddresses" asp-route-walletId="@Model.Id" class="btn btn-primary me-2">
            <i class="fa fa-ship"></i> Boarding Addresses
        </a>
        <a asp-action="Index" class="btn btn-secondary">Back to Wallets</a>
    </div>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @TempData["StatusMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">Wallet Information</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Wallet ID:</strong>
                    </div>
                    <div class="col-md-9">
                        <code class="text-break">@Model.Id</code>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3">
                        <strong>Public Key:</strong>
                    </div>
                    <div class="col-md-9">
                        <code class="text-break">@Model.PubKey</code>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3">
                        <strong>Current Index:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.CurrentIndex
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3">
                        <strong>Number of Contracts:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.Contracts.Count
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Contracts.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Wallet Contracts</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Script</th>
                                    <th>Type</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contract in Model.Contracts)
                                {
                                    <tr>
                                        <td>
                                            <code class="text-break">@contract.Script</code>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@contract.Type</span>
                                        </td>
                                        <td>
                                            @if (contract.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h5>No Contracts Yet</h5>
                    <p class="text-muted">This wallet doesn't have any contracts created yet. Contracts will be created automatically when you start using the wallet for transactions.</p>
                </div>
            </div>
        </div>
    </div>
}