@model BTCPayServer.Plugins.ArkPayServer.Models.CreateWalletViewModel
@using BTCPayServer.Abstractions.Extensions
@{
    ViewData.SetActivePage("ArkPayServer", "ArkPayServer", "ArkPayServer");
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title mb-0">Create New Ark Wallet</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    <h6 class="alert-heading">Important Security Notice</h6>
                    <p class="mb-0">
                        A new seed will be automatically generated for your wallet. 
                        Make sure to securely backup your wallet data as it will be needed to recover your funds.
                        The password will be used to encrypt your wallet.
                    </p>
                </div>

                <form asp-action="CreateWallet" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Wallet Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter a secure password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">
                            Choose a strong password to encrypt your wallet. This cannot be recovered if lost.
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create Wallet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>