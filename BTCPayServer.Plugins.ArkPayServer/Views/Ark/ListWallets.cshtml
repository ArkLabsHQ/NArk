@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.ArkPayServer.Data.Entities
@using NArk.Extensions
@model IEnumerable<ArkWallet>

@{
    ViewData.SetActivePage(category: "Server", activePage: "ArkWallets", title: "Ark - Wallets");
}

<div class="sticky-header">
    <h2>@ViewData["Title"]</h2>
</div>

<partial name="_StatusMessage" />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th text-translate="true">Wallet ID</th>
                    <th text-translate="true">Public Key</th>
                    <th text-translate="true">Contracts</th>
                    <th text-translate="true">Swaps</th>
                    <th text-translate="true">Destination</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var wallet in Model)
                {
                    <tr>
                        <td>
                            <vc:truncate-center text="@wallet.Id" classes="truncate-center-id"/>
                        </td>
                        <td>
                            <vc:truncate-center text="@wallet.PublicKey.ToHex()" classes="truncate-center-id"/>
                        </td>
                        <td>
                            @if (wallet.Contracts?.Any() == true)
                            {
                                <span class="badge text-bg-info">@wallet.Contracts.Count</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td>
                            @if (wallet.Swaps?.Any() == true)
                            {
                                <span class="badge text-bg-warning">@wallet.Swaps.Count</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td>
                            @if (wallet.Destination != null)
                            {
                                <vc:truncate-center text="@wallet.WalletDestination" classes="truncate-center-id"/>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <a asp-action="AdminWalletOverview" asp-route-walletId="@wallet.Id" class="btn btn-sm btn-secondary">
                                    View Details
                                </a>
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteWalletModal_@wallet.Id.GetHashCode()">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                    
                    @* Delete Wallet Modal *@
                    <div class="modal fade" id="deleteWalletModal_@wallet.Id.GetHashCode()" tabindex="-1" aria-labelledby="deleteWalletModalLabel_@wallet.Id.GetHashCode()" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="deleteWalletModalLabel_@wallet.Id.GetHashCode()">
                                        <vc:icon symbol="warning" /> Delete Wallet
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="AdminDeleteWallet" method="post" asp-route-walletId="@wallet.Id">
                                    <div class="modal-body">
                                        <div class="alert alert-danger">
                                            <strong>Warning:</strong> This action cannot be undone and will delete ALL data associated with this wallet.
                                        </div>
                                        <p class="mb-3">Are you sure you want to delete this wallet?</p>
                                        <div class="mb-3">
                                            <label class="text-muted small">Wallet ID</label>
                                            <div class="font-monospace small text-break">@wallet.Id</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-muted small">Public Key</label>
                                            <div class="font-monospace small text-break">@wallet.PublicKey.ToHex()</div>
                                        </div>
                                        <p class="mb-2"><strong>This will delete:</strong></p>
                                        <ul>
                                            <li>@(wallet.Contracts?.Count ?? 0) contract(s)</li>
                                            <li>@(wallet.Swaps?.Count ?? 0) swap(s)</li>
                                            <li>All associated VTXOs and intents</li>
                                            <li>All wallet configuration data</li>
                                        </ul>
                                        <div class="alert alert-warning">
                                            <strong>Note:</strong> The wallet cannot be deleted if it has unspent VTXOs, pending swaps, or pending intents.
                                        </div>
                                        <p class="text-muted mb-0">
                                            Make sure you have backed up the private key if needed before deletion.
                                        </p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete Wallet</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-secondary mt-3" text-translate="true">
        No Ark wallets found.
    </p>
}
